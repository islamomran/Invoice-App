{% raw %}

<div class="box box-primary">
    <!-- /.box-header -->
    <!-- form start -->
    <div class="box-body">
        <div ng-if="formType=='DataEntry'">
            <div class="form-group">
                <div>
                    <label>Supplier Name</label>
                    <select id="soldBySelect" selected></select>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label>Invoice No.</label>
                    <select id="invoiceSelect" aria-placeholder="select supplier" selected></select>
                </div>
            </div>
        </div>

        <div class="form-group" ng-show="formType!='DataEntry'">
            <label>Supplier Name</label>
            <input type="text" ng-model="intermediateData.supplierName" required disabled>

            <label>Invoice No.</label>
            <input type="text" ng-model="intermediateData.invoiceNumber" required disabled>
        </div>

        <hr>
        <!--bill_to: "Mansarover"-->
        <!--bill_to_name: ""-->
        <!--description_html: "<>"-->
        <!--grand_total: 200-->
        <!--id: 2-->
        <!--invoice_date: "2019-08-28"-->
        <!--invoice_number: "12"-->
        <!--ship_to: "Mansarover"-->
        <!--ship_to_name: ""-->
        <!--sold_by: 2-->
        <!--sold_by_name: "Alpine Energy"-->
        <table class="table table-striped border">
            <tr>
                <td><label for="invoicedate">Invoice Date</label></td>
                <td><p>{{invoiceData.invoice_date}}</p></td>
            </tr>
            <tr>
                <td><label for="invoicenumber">Invoice No.</label></td>
                <td><p>{{invoiceData.invoice_number}}</p></td>
            </tr>
            <tr>
                <td><label for="invoicebillto">Customer Name</label></td>
                <td><p>{{invoiceData.bill_to}}</p></td>
            </tr>
            <tr>
                <td><label for="supplier_name">Supplier Name</label></td>
                <td><p>{{invoiceData.sold_by_name}}</p></td>
            </tr>
            <tr>
                <td><label for="grand_total">Grand Total</label></td>
                <td><p>{{invoiceData.grand_total}}</p></td>
            </tr>

        </table>

        <div class="form-group">
            <div>
                {{invoiceData.description_html}}
            </div>
        </div>
    </div>
    <!-- /.box-body -->
</div>

{% endraw %}